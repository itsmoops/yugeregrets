link-blue = #7bc5d1
scroll-time = 15s

@keyframes fadein
  from
    opacity 0
  to
    opacity 1

@keyframes fadeout
  from
    opacity 1
  to
    opacity 0

@keyframes scrollup
  from
    transform translateY(0%)
  to
    transform translateY(-100%)

html, body
  height 100%
  width 100%
  margin 0
  padding 0
  font-family 'Alice', serif
  font-size 50px
  color white
  text-shadow 3px 3px black
  background-color black

a
  color link-blue

a:hover
  color #75b0ba
  cursor pointer
  text-decoration none

a:focus
  color link-blue
  text-decoration none

#app
  width 100%
  height 100%

.title-container
  background url(../img/title.jpg) link-blue
  background-size cover

.container
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  top 0px
  bottom 0px

.content
  display block
  text-align center

.ragrats
  opacity 0
  display flex
  align-items center
  justify-content center

.tweet
  overflow hidden
  position fixed
  top 0
  left 0
  right 0
  bottom 0

.tweet__container
  width 70%
  left 15%
  height 100%
  font-size 1.8em
  position relative
  transform translateY(-100%)
  animation scrollup scroll-time linear

.tweet__body {
  position absolute
  top 100%
  transform translateY(-100%)
  animation scrollup scroll-time linear
}

.tweet__author
  text-align right

.fullscreen
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  z-index 10

.fullscreen-video
  position absolute
  top 0
  left 0
  min-width 100%
  min-height 100%
  z-index: -1

.fade-enter, .fade-appear
  animation fadein 4s
  animation-fill-mode forwards

.fade-leave
  animation fadeout 4s
  animation-fill-mode forwards

.title
  font-family 'Allura', cursive
  font-size 220px
  text-shadow 3px 3px black
  transform rotate(-25deg)
  position fixed
  top 2%
  left 10%

.title-author
  position fixed
  bottom 2%

.donate
  font-size .5em
  position fixed
  width 100%
  top 100%
  left 0
  z-index 100
  padding 20px 0 10px
  text-align center
  transform translateY(-100%)
  background linear-gradient(to top, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0) 100%)
  animation scrollup 300ms ease-out

#audio
  display none

