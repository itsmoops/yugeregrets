link-blue = #7bc5d1
scroll-time = 15s

@keyframes fadein
  from
    opacity 0
  to
    opacity 1

@keyframes fadeout
  from
    opacity 1
  to
    opacity 0

@keyframes scrollup
  from
    transform translateY(0%)
  to
    transform translateY(-100%)

@font-face
  font-family 'icons'

html, body
  height 100%
  width 100%
  margin 0
  padding 0
  font-family 'Alice', serif
  color white
  text-shadow 3px 3px black
  background: black

a
  color link-blue

a:hover
  color #75b0ba
  cursor pointer
  text-decoration none

a:focus
  color link-blue
  text-decoration none


.remove-background
  background-image: none

.container
  height 100%
  width 100%
  background-color black
  background url(../img/title.jpg) black
  background-size cover
  display flex
  align-items center
  justify-content center
  top 0px
  bottom 0px

.fill
  height 100%
  width 100%

.content
  display block
  text-align center

.ragrats
  opacity 0
  display flex
  align-items center
  justify-content center

.tweet
  overflow hidden
  position fixed
  top 0
  left 0
  right 0
  bottom 0

.tweet__container
  width 100%
  height 100%
  position relative
  transform translateY(-100%)
  animation scrollup scroll-time linear

.tweet__body
  position absolute
  top 100%
  transform translateY(-100%)
  animation scrollup scroll-time linear
  font-size 90px
  padding 0 15%

  @media (max-width: 980px)
    font-size 60px
    padding 0 10%

  @media (max-width: 767px)
    font-size 30px
    padding 0 20px


.tweet__author
  text-align right
  display block

.fullscreen
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  z-index 10

.fullscreen-video
  position absolute
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  z-index -1
  transform translate(-50%, -50%)

.fade-enter, .fade-appear
  animation fadein 4s
  animation-fill-mode forwards

.fade-leave
  animation fadeout 4s
  animation-fill-mode forwards

.title
  font-family 'Allura', cursive
  font-size 220px
  text-shadow 3px 3px black
  transform rotate(-25deg)
  position fixed
  top 2%
  left 10%

  @media (max-width: 980px)
    font-size 180px
    right 10%

  @media (max-width: 767px)
    font-size 110px

.title-author
  position fixed
  bottom 2%
  right 0
  font-size 50px
  padding 0 10px
  width 50%

  @media (max-width: 980px)
    width 100%
    font-size 50px

  @media (max-width: 767px)
    font-size 30px

.bottom__banner
  text-align: center;
  padding 20px 0 10px
  transform translateY(-100%)
  background linear-gradient(to top, rgba(0,0,0,0.85) 0%, rgba(0,0,0,0) 100%)
  animation scrollup 300ms ease-out
  position fixed
  width 100%
  top 100%
  left 0
  z-index 100

.donate
  font-size 25px

  @media (max-width: 767px)
    font-size 16px
    padding-left 10px
    padding-right 10px

.tr-credit
    padding-right 5px
    font-size 1em
    position absolute
    right 15px
    top 13px
    text-shadow: 1px 1px #000;

    @media (max-width: 767px)
      bottom auto

.controls
  position fixed
  top 13px
  left 13px
  border 0px none transparent
  border-radius 3px
  z-index 10
  opacity 0.75
  transition opacity 200ms ease-in-out

  &:hover
    opacity 1

.controls__button
  border 0px none transparent
  margin-left -1px
  background-color transparent
  font-family sans-serif
  font-size 10px
  display block
  padding 3px 10px
  position relative

  &:before
    content ''
    background-color #C00
    display block
    position: absolute;
    left 9px
    top 2px
    width ((16px**2 * 2)**0.5)
    height 3px
    border-radius 25%
    transform rotate(45deg) scaleX(0)
    transition transform 300ms ease-out
    transform-origin left

.controls__button--disabled:before
  transform rotate(45deg) scaleX(1)

.controls__icon
  fill white
  width 16px
  height 16px

.audio
  display none
