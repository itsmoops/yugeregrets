@keyframes fadein
  from
    opacity 0
  to
    opacity 1

@keyframes fadeout
  from
    opacity 1
  to
    opacity 0

@keyframes scrollup
  from
    top 100%
  to
    top -200%

html, body
  height 100%
  width 100%
  margin 0
  padding 0
  font-family 'Alice', serif
  font-size 50px
  color white
  text-shadow 3px 3px black
  background-color black

a
  color #7bc5d1

a:hover
  color #75b0ba
  cursor pointer
  text-decoration none

a:focus
  color #7bc5d1
  text-decoration none

.title-container
  background url(../img/title.jpg) #7bc5d1
  background-size cover

.container
  height 100%
  width 100%
  display flex
  align-items center
  justify-content center
  top 0px
  bottom 0px

.content
  display block
  text-align center

#ragrats
  opacity 0
  display flex
  display -webkit-flex
  align-items center
  justify-content center

#tweet-border
  display flex
  align-items center
  justify-content center
  overflow hidden
  position fixed
  top 50px
  left 0
  right 0
  bottom 50px

  &:before, &:after
    content ""
    position absolute
    left 0
    right 0

#tweet-container
  width 70%
  font-size 1.8em
  top 100%
  position relative

#author
  text-align right

.scroll-up
  animation scrollup 30s
  animation-fill-mode forwards

.fullscreen
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  overflow hidden
  z-index 10

.fullscreen-video
  position absolute
  top 0
  left 0
  width 100%

.fade-in
  animation fadein 4s
  animation-fill-mode forwards

.fade-out
  animation fadeout 4s
  animation-fill-mode forwards

.title
  font-family 'Allura', cursive
  font-size 220px
  text-shadow 3px 3px black
  transform rotate(-25deg)
  position fixed
  top 2%
  left 10%

.title-author
  position fixed
  bottom 2%

#donate
  font-size .5em
  opacity 0
  position fixed
  width 100%
  bottom 0
  z-index 100
  padding-top 10px
  text-align center

#reset
  opacity 0

#audio
  display none

